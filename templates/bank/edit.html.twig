        <h1 class="mb-4">Modifier la Banque</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="m-0">Formulaire de modification</h5>
            </div>
            <div class="card-body">
                {{ include('bank/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_bank_index') }}" class="btn btn-secondary">Retour à la liste</a>
                {{ include('bank/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}