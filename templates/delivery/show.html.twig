{% extends 'base.html.twig' %}

{% block title %}Détails de la Livraison{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de la Livraison</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="m-0">Informations de Livraison</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong>ID:</strong>
                        <p>{{ delivery.id }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Code de Livraison:</strong>
                        <p>{{ delivery.deliveryCode }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Date:</strong>
                        <p>{{ delivery.date ? delivery.date|date('Y-m-d') : 'N/A' }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Range 1:</strong>
                        <p>{{ delivery.range1 }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Range 2:</strong>
                        <p>{{ delivery.range2 }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Total de la Carte:</strong>
                        <p>{{ delivery.cardTotal }}</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_delivery_index') }}" class="btn btn-secondary">Retour à la liste</a>
                {#<a href="{{ path('app_delivery_edit', {'id': delivery.id}) }}" class="btn btn-warning">Modifier</a>
                {{ include('delivery/_delete_form.html.twig') }}#}
            </div>
        </div>
    </div>
{% endblock %}