{% extends 'base.html.twig' %}

{% block title %}Delivery{% endblock %}

{% block body %}
    <h1>Delivery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ delivery.id }}</td>
            </tr>
            <tr>
                <th>DeliveryCode</th>
                <td>{{ delivery.deliveryCode }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ delivery.date ? delivery.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Range1</th>
                <td>{{ delivery.range1 }}</td>
            </tr>
            <tr>
                <th>Range2</th>
                <td>{{ delivery.range2 }}</td>
            </tr>
            <tr>
                <th>CardTotal</th>
                <td>{{ delivery.cardTotal }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_delivery_index') }}">back to list</a>

    <a href="{{ path('app_delivery_edit', {'id': delivery.id}) }}">edit</a>

    {{ include('delivery/_delete_form.html.twig') }}
{% endblock %}
