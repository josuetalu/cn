{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Mon compte</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="m-0">Mon profil</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong>ID:</strong>
                        <p>{{ user.id }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Nom d'utilisateur:</strong>
                        <p>{{ user.username }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>RÃ´les:</strong>
                        <p>{{ user.roles ? user.roles|json_encode : '' }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Nom complet:</strong>
                        <p>{{ user.fullname }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Date d'inscription:</strong>
                        <p>{{ user.registrationDate ? user.registrationDate|date('Y-m-d') : 'N/A' }}</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_profile_change_password')}}" class="btn btn-warning">Modifier mon mot de passe</a>
            </div>
        </div>
    </div>
{% endblock %}