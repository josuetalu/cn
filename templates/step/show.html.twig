{% extends 'base.html.twig' %}

{% block title %}Détails de l'Étape{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de l'Étape</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="m-0">Informations sur l'Étape</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong>ID:</strong>
                        <p>{{ step.id }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Code:</strong>
                        <p>{{ step.code }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Label:</strong>
                        <p>{{ step.label }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Position:</strong>
                        <p>{{ step.position }}</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_step_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_step_edit', {'id': step.id}) }}" class="btn btn-warning">Modifier</a>
                {{ include('step/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}