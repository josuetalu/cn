{% extends 'base.html.twig' %}

{% block title %}Détails de l'Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de l'Utilisateur</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="m-0">Informations sur l'Utilisateur</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong>ID:</strong>
                        <p>{{ user.id }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Nom d'utilisateur:</strong>
                        <p>{{ user.username }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Rôles:</strong>
                        <p>{{ user.roles ? user.roles|json_encode : '' }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Nom complet:</strong>
                        <p>{{ user.fullname }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Date d'inscription:</strong>
                        <p>{{ user.registrationDate ? user.registrationDate|date('Y-m-d') : 'N/A' }}</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}