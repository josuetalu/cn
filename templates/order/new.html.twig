{% extends 'base.html.twig' %}

{% block title %}New Order{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Créer une nouvelle commande</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="m-0">Formulaire de création</h5>
            </div>
            <div class="card-body">

            {% for type, messages in app.flashes %}
                <div class="flash-{{ type }} bg-danger text-white btn">
                    {% for message in messages %}
                        <p>{{ message }}</p>
                    {% endfor %}
                </div>
            {% endfor %}

                {{ include('order/_form.html.twig') }}
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_order_index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}