{% extends 'base.html.twig' %}

{% block title %}Créer une Nouvelle Plage{% endblock %}

{% block body %}
    <div class="container mt-4" style="width:40rem;">
        <h1 class="mb-4">Créer une nouvelle plage</h1>
        <h3> BIN : {{bin.bank.bankCode}} / No. serie : {{bin.serial}} </h3>

        <div class="card">
            <div class="card-header">
                <h5 class="m-0">Formulaire de création</h5>
            </div>
            <div class="card-body">
                {{ include('range/_form.html.twig') }}
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_range_index', {'binid': bin.id} ) }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}