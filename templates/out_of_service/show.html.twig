{% extends 'base.html.twig' %}

{% block title %}Hors Service{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails sur les cartes hors services</h1>

        <div class="card">
            <div class="card-header">
                <h5 class="m-0">Informations sur la carte hors Service</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <strong>Id :</strong>
                        <p>{{ out_of_service.id }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Code de Livraison :</strong>
                        <p>{{ out_of_service.deliveryCode }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Date de Livraison :</strong>
                        <p>{{ out_of_service.deliveryDate ? out_of_service.deliveryDate|date('Y-m-d') : 'N/A' }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Plage 1 :</strong>
                        <p>{{ out_of_service.range1 }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Plage 2 :</strong>
                        <p>{{ out_of_service.range2 }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Total de Cartes :</strong>
                        <p>{{ out_of_service.totalCard }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Raison :</strong>
                        <p>{{ out_of_service.reason }}</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <strong>Date de Blocage :</strong>
                        <p>{{ out_of_service.lockDate ? out_of_service.lockDate|date('Y-m-d') : 'N/A' }}</p>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <a href="{{ path('app_out_of_service_index') }}" class="btn btn-secondary">Retour à la liste</a>
                {#<a href="{{ path('app_out_of_service_edit', {'id': out_of_service.id}) }}" class="btn btn-warning">Modifier</a>#}
            </div>
        </div>

        {{ include('out_of_service/_delete_form.html.twig') }}
    </div>
{% endblock %}