{% extends 'base.html.twig' %}

{% block title %}Gestion des cartes hors services{% endblock %}

{% block body %}
    <div class="container mt-4">
        {#<h1 class="mb-4">Gestion des cartes hors services</h1>
        <a href="{{ path('app_out_of_service_new') }}" class="btn btn-primary mb-3">Créer un nouveau cartes hors services</a>#}
        <div class="card"> 
            <div class="card-header">
                <h5 class="m-0">Liste des cartes hors services</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Code de livraison</th>
                            <th>Date de livraison</th>
                            <th>Range (début)</th>
                            <th>Range (fin)</th>
                            <th>Nbr. de carte</th>
                            <th>Date de blocage</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for out_of_service in out_of_services %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ out_of_service.deliveryCode }}</td>
                            <td>{{ out_of_service.deliveryDate ? out_of_service.deliveryDate|date('Y-m-d') : '' }}</td>
                            <td>{{ out_of_service.range1 }}</td>
                            <td>{{ out_of_service.range2 }}</td>
                            <td>{{ out_of_service.totalCard }}</td>
                            <td>{{ out_of_service.lockDate ? out_of_service.lockDate|date('Y-m-d') : '' }}</td>
                            <td>
                               {# <a href="{{ path('app_out_of_service_edit', {'id': out_of_service.id}) }}" class="btn btn-warning btn-sm">Modifier</a> #}
                                <a style="" href="{{ path('app_out_of_service_show', {'id': out_of_service.id}) }}" class="btn btn-sm btn-secondary btn-icon-split">
                                    <span class="icon text-white bg-primary">
                                        <i class="fas fa-arrow-right"></i>
                                    </span>
                                    <span class="text">Afficher</span>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div> 
    </div>
{% endblock %}