{% extends 'base.html.twig' %}

{% block title %}Gestion des BIN{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Gestion des BIN</h1>
        <a href="{{ path('app_bin_new') }}" class="btn btn-primary mb-3">Créer un nouveau Bin</a>
        <div class="card"> 
            <div class="card-header">
                <h5 class="m-0">Liste des BIN</h5>
            </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Date d'octroi</th>
                        <th>No. Serie</th>
                        <th>Banque</th>
                        <th>Range (debut)</th>
                        <th>Range (fin)</th>
                        <th>Dernier PAN émis</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for bin in bins %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ bin.grantDate ? bin.grantDate|date('Y-m-d') : '' }}</td>
                        <td>{{ bin.serial }}</td>
                        <td>{{ bin.bank.bankCode }}</td>
                        <td>{{ bin.range1 }}</td>
                        <td>{{ bin.range2 }}</td>
                        <td>{{ bin.lastEmittedPan }}</td>
                        <td>
                            <a href="{{ path('app_bin_show', {'id': bin.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                            <a href="{{ path('app_bin_edit', {'id': bin.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div> 
    </div>
{% endblock %}